{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    // "typeRoots": ["./node_modules/@types", "./src"],
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src", // Add this line
    "paths": { // Add this block
      "@/*": ["./*"]
    }
  },
  "include": ["src/**/*.ts", "tests/**/*.ts"],
  "exclude": ["node_modules"]
}